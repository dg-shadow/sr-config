<launch>
  <include file="$(find sr_ethercat_hand_config)/launch/sr_rosbag_log.launch">
    <arg name="log_bag_prefix" value="sr_rhand"/>
  </include>
  <include file="$(find sr_robot_launch)/launch/srhand.launch">
    <arg name="eth_port" value="enp0s25" />
    <arg name="hand_serial" value="1594" />
    <arg name="hand_id" value="rh" />

    <arg name="robot_description" value="$(find sr_description)/robots/shadowhand_lite.urdf.xacro" />
    <arg name="mapping_path" value="$(find sr_edc_launch)/mappings/default_mappings/rh_lite_v1.yaml"/>

    <arg name="use_moveit" value="true"/>
    <arg name="sim" value="false"/>
  </include>
  <node pkg="sr_moveit_hand_config" type="timed_roslaunch.sh" args="10 sr_ethercat_hand_config optoforce_hand.launch port:=/dev/optoforce_ABC0A001"
    name="timed_roslaunch_optoforce" output="screen"/>
</launch>
